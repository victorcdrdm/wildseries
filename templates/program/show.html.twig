{% extends 'base.html.twig' %}
{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" style="width: 500px" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <div class="container-fluid">
                <div>
                    <h1 class="mt-0">{{ program.title }}</h1>
                    <p>{{ program.summary }}</p>
                    <p>Catégorie : {{ program.category.name }}</p>
                </div>
                <div>
                    <h2 class="mt-0">Liste des saison</h2>
                    <li>
                        {% for season in seasons %}
                        <ul>
                            saison n=°{{ season.number }} - année de diffussion {{ season.year }}
                            Résumer de la saison "{{ season.description }}"
                            <a href="{{ path("program_season_show", {program: program.id, season: season.id }) }}">saison {{ season.number }}</a>
                        </ul>
                        {% endfor %}
                    </li>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}