{% extends 'base.html.twig' %}
{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" style="width: 500px" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <div class="container-fluid">
                <div>
                    <h1 class="mt-0">{{ program.title }}</h1>
                    <p>{{ program.summary }}</p>
                    <p>Catégorie : {{ program.category.name }}</p>
                </div>
                <div>
                    <h2 class="mt-0">Liste des saison</h2>
                    <ul>
                        {% for season in seasons %}
                        <li>
                            saison n=°{{ season.number }} - Année de diffusion {{ season.year }}
                            Résumer de la saison "{{ season.description }}"
                            <a href="{{ path("program_season_show", {slug: program.slug, season: season.id }) }}">saison {{ season.number }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                <strong>Acteurs :</strong>
                <ul>
                    {% for actor in program.actors %}
                        <li>{{ actor.name }} </li>
                        <a href="{{ path("actor_show", { actor: actor.id }) }}">Voir la fiche de l'acteur</a>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <a href="{{ path('season_new') }}">
        Ajoute une saisons
    </a><br>
    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}
