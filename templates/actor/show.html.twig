{% extends 'base.html.twig' %}

{% block title %}Hello ActorController!{% endblock %}

{% block body %}
        <div class="media">
                <div class="media-body">
                        <h1 class="mt-0">{{ actor.name }}</h1>
                        <div>
                                <p class="remove-margin">Liste des séries de cet acteur :</p>
                                <ul>
                                        {% for program in actor.programs %}
                                                <li>
                                                        <a href="{{ path("program_show" , { slug: program.slug}) }}">{{ program.title }}</a>
                                                </li>
                                        {% endfor %}
                                </ul>
                        </div>
                </div>
        </div>

        <a class="link-return" href="{{ path('actor_index') }}">
                Retour à la liste des acteurs
        </a>
{% endblock %}
